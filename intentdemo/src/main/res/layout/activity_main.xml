<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/bg1">

    <TextView
            android:text="欢迎使用本系统"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Title1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" android:textSize="24sp" android:textColor="@color/colorAccent"
            android:layout_marginLeft="120dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ed_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="请输入用户名" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_password"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="请输入密码" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp"/>
    <Button
            android:text="登录"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="userLogin" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="276dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="接收到的电话号码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" android:textSize="24sp"
            android:textColor="@android:color/holo_orange_dark"/>
    <Button
            android:text="下载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="34dp" android:layout_marginLeft="58dp" android:layout_marginStart="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" android:onClick="dowload"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:layout_marginTop="45dp" android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintStart_toEndOf="@+id/textView1"/>
    <Button
            android:text="钟表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="316dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="316dp" android:layout_marginBottom="107dp" android:onClick="goClock"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintVertical_bias="0.863"/>

</androidx.constraintlayout.widget.ConstraintLayout>