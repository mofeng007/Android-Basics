<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/bg2">

    <TextView
            android:text="="
            android:layout_width="27dp"
            android:layout_height="26dp" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="216dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="144dp" android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>
    <TextView
            android:layout_width="55dp"
            android:layout_height="44dp" android:id="@+id/num2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="144dp" android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintHorizontal_bias="0.201" android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="92dp"
            android:layout_height="49dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/result"
            android:hint="输入答案"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="144dp"
            android:textSize="22sp" android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"/>
    <Button
            android:text="提交"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:onClick="test"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/result" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="20sp"/>
    <TextView
            android:layout_width="55dp"
            android:layout_height="44dp" android:id="@+id/num1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="144dp" android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>
    <Button
            android:text="更新计算题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt_creat"
            android:onClick="creatNum"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="66dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/num1" android:textSize="20sp"/>
    <TextView
            android:text="+"
            android:layout_width="17dp"
            android:layout_height="25dp" android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="144dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>
</androidx.constraintlayout.widget.ConstraintLayout>